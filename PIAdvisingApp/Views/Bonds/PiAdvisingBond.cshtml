@model List<PIAdvisingApp.ViewModels.PiAdvisingBond>

@{
    ViewBag.Title = "PiAdvisingBond List";
}

<style>
    .tbody, td, th {
        padding: 2px !important;
        font-size: 11px !important;
    }

    .modal-backdrop {
        z-index: 10 !important
    }
</style>

<h2>PiAdvisingBond List</h2>

<table id="pi-advising-bond-table" class="mb-0 table table-bordered table-hover">
    <thead>
        <tr>
            <th class="text-center">ApiNumber</th>
            <th class="text-center">Val</th>
            <th class="text-center">Qty</th>
            <th class="text-center">EntryDate</th>
            <th class="text-center d-none">BookingNos</th>
            <th class="text-center">Remarks</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center api-number">@item.ApiNumber</td>
                <td class="text-center">@item.Val</td>
                <td class="text-center">@item.Qty</td>
                <td class="text-center">@item.EntryDate.ToShortDateString()</td>
                <td class="text-center d-none">@item.BookingNos</td>
                <td class="text-center">@item.Remarks</td>
                <td class="text-center">
                    <button class="btn btn-primary view-button" data-booking-nos="@item.BookingNos">View</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="modal-container"></div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap4.min.css" />
@section Scripts {
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#pi-advising-bond-table').DataTable();

            $('.view-button').click(function () {
                 var apiNumber = $(this).closest('tr').find('.api-number').text();
                var url = '@Url.Action("GetBondModal", "Bonds")'; // Replace "ControllerName" with your actual controller name

                $.get(url, { apiNumber: apiNumber }, function (data) {
                    $('#modal-container').html(data);
                    $('#modal-container .modal').modal('show');
                });
            });
        });
    </script>
}
