@model BondDataVm
@using PIAdvisingApp.ViewModels

@{
    ViewBag.Title = "Edit Product";
}

<h2>Edit Product</h2>

<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Product</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditProduct", "Bonds", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.RowNumber) <!-- Add this line -->
                    @Html.HiddenFor(m => m.ApiNumber)
                    @Html.HiddenFor(m => m.BookingSubId)
                    @Html.HiddenFor(m => m.ProductId)

                    <!-- Add other fields for editing -->
                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductName)
                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Measurement)
                        @Html.TextBoxFor(m => m.Measurement, new { @class = "form-control" })
                    </div>
                    <!-- Add other fields here -->

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                }
            </div>
        </div>
    </div>
</div>