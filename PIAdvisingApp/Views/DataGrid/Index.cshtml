@Html.EJS().Grid("UrlAdaptor").DataSource(ds => ds.Url(@Url.Action("UrlDatasource", "DataGrid")).Adaptor("UrlAdaptor")).AllowSorting().AllowResizing().AllowReordering().AllowGrouping().AllowFiltering().AllowPdfExport().Columns(col =>
{      
        col.Type("checkbox").Width("50").Add();
        col.Field("Id").HeaderText("Id").Add();
        col.Field("ApiNumber").HeaderText("ApiNumber").Add();
        col.Field("BookingNo").HeaderText("BookingNo").Add();
        col.Field("InvoiceQty").HeaderText("InvoiceQty").Add();
        col.Field("DelValue").HeaderText("DelValue").Add();
 }).AllowPaging().Toolbar(new List<string>() { "Search" , "PdfExport"}).FilterSettings(filter => { filter.Type(Syncfusion.EJ2.Grids.FilterType.Menu); }).AllowSelection().SelectionSettings(select => select.Type(Syncfusion.EJ2.Grids.SelectionType.Multiple)).ToolbarClick("toolbarclick").Render()

<script>
function toolbarclick(args)
{
   if (args.item.id === this.element.id + '_pdfexport') 
   {
    this.pdfExport();
   }
}
</script>
