@model List<PIAdvisingApp.ViewModels.CmAdvisingBond>

@{
    ViewBag.Title = "Approved List";
}

@section Css {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css" />

    <style>
        .tbody,
        td,
        th {
            padding: 2px !important;
            font-size: 11px !important;
        }

        /* Increase the z-index of modal backdrop */
        .modal-backdrop {
            z-index: 0 !important;
        }

        .custom-table {
            background-color: #f8f9fa; /* Replace with the desired table background color */
        }

        .table-heading {
            font-size: 20px; /* Adjust the font size as needed */
        }

        #pi-advising-bond-table th {
            font-size: 24px; /* Adjust the font size as needed */
        }
    </style>
}

<h2 class="table-heading">Pending API For CM Approval</h2>

<table id="pi-advising-bond-table" class="mb-0 table table-bordered table-hover custom-table">
    <thead>
        <tr>
            <th class="text-center">Advise Date</th>
            <th class="text-center">Commercial Submission Date</th>
            <th class="text-center">ApiNumber</th>
            <th class="text-center">Val</th>
            <th class="text-center">Qty</th>
            @*<th class="text-center d-none">BookingNos</th>*@
            <th class="text-center">Remarks</th>
            @*<th class="text-center">Actions</th>*@

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.EntryDate.ToString("dd-MMM-yy")</td>
                <td class="text-center">@item.BondSDate.ToString("dd-MMM-yy")</td>
                <td class="text-center">@item.EntryDate.ToString("dd-MMM-yy")</td>
                    <td class="text-center current-date-time"></td>
                <td class="text-center current-date-time"></td>
                <td class="text-center api-number">@item.ApiNumber</td>
                <td class="text-center">@item.TotalValue</td>
                <td class="text-center">@item.TotalQuantity</td>
                @*<td class="text-center d-none">@item.BookingNos</td>*@
                <td class="text-center">@item.Remarks</td>
                <td class="text-center">
                    @*<button class="btn btn-primary view-button" data-booking-nos="@item.BookingNos">View</button>*@
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="modal-container"></div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap4.min.css" />
@section Scripts {
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#pi-advising-bond-table').DataTable();

            $('.view-button').click(function () {
                var apiNumber = $(this).closest('tr').find('.api-number').text();
                var url = '@Url.Action("GetBondModal", "Bonds")';

                $.get(url, { apiNumber: apiNumber }, function (data) {
                    $('#modal-container').html(data);
                    $('#bond-modal').modal('show');
                });
            });
            // Get the current date and time
            let currentDate = new Date();

            // Format the date to the desired format (e.g., "dd-MMM-yy")
            let formattedDate = currentDate.toLocaleDateString("en-US", {
                day: "2-digit",
                month: "short",
                year: "2-digit",
            });

            // Set the formatted date to the <td> element
            $(".current-date-time").text(formattedDate);
        });
    </script>
}
