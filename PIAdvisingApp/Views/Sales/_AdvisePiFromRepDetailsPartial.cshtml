@model  IEnumerable<PIAdvisingApp.ViewModels.AdvisePiFromRepResult>

<div class="row">
    <div class="col-lg-8">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <h5 class="card-title">Table bordered</h5>
                <div class=" table-responsive">
                    <table class="mb-0 table table-sm table-bordered">
                        <thead>
                            @{ int rowNo = 1;}
                            <tr>
                                <th>SL</th>
                                <th>Select</th>
                                <th class="text-center">Booking No</th>
                                <th class="text-center">Booking Id</th>
                                <th class="text-center">Booking Date</th>
                                <th class="text-center">PI Status</th>
                                <th class="text-center">Customer Name</th>
                                <th class="text-center">Representative Name</th>
                                <th class="text-center">Short Name</th>
                                <th class="text-center">Booking Qty</th>
                                <th class="text-center">Booking Value</th>
                                <th class="text-center">Retailer Name</th>
                                <th class="text-center">Delivery (%)</th>
                                <th class="text-center">Category Name</th>
                                <th class="text-center">Company Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@rowNo</td>
                                    <td class="text-center"><input type="checkbox" name="selectedItems" value="@item.BookingId" /></td>
                                    <td class="text-center">@item.BookingNo</td>
                                    <td class="text-center">@item.BookingId</td>

                                    <td class="text-center">@item.BookingDate</td>
                                    <td class="text-center">@item.PIStatus</td>
                                    <td class="text-center">@item.CustomerName</td>
                                    <td class="text-center">@item.RepresentativeName</td>
                                    <td class="text-center">@item.ShortName</td>

                                    <td class="text-center">@item.BookingQty</td>
                                    @MyHelpers.FinancialNumberRoundedTd(item.BookingValue, "td-green")
                                    @*<td class="text-center">@item.BookingValue</td>*@
                                    <td class="text-center">@item.RetailerName</td>
                                    <td class="text-center">@item.DeliveryPercentage</td>
                                    <td class="text-center">@item.CategoryName</td>
                                    <td class="text-center">@item.CompanyName</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>