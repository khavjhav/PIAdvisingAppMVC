<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filters</h5>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="rep-filter">Filter by Representative Name:</label>
                        <select class="form-control" id="rep-filter">
                            <option value="">All</option>
                            @foreach (var rep in Model.Select(x => x.RepName).Distinct())
                            {
                                <option value="@rep">@rep</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="customer-filter">Filter Customer Name:</label>
                        <select class="form-control" id="customer-filter">
                            <option value="">All</option>
                            @foreach (var customerName in Model.Select(x => x.CustomerName).Distinct())
                            {
                                <option value="@customerName">@customerName</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <button type="button" id="submit-btn" class="btn btn-primary">Submit</button>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <table class="mb-0 table table-bordered table-hover" id="added-table" style="overflow: auto;">
                <thead>
                    <tr>
                        <th>Api Number</th>
                        <th>Invoice Qty</th>
                        <th>Invoice Qty</th>
                        <th>Customer Name</th>
                        <th>Rep Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="apiNumber">@item.ApiNumber</span></td>
                            <td>@item.InvoiceQty</td>
                            <td>@item.InvoiceValue</td>
                            <td>@item.CustomerName</td>
                            <td>@item.RepName</td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="button" id="submit-btn" class="btn btn-primary mt-3">Submit</button>
        </div>
    </div>
</div>



@section Modal {
    <div class="modal fade" id="approved-pi" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">API Approval - <span id="api-number-heading"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div id="approved-pi-modal-body" class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-success" data-dismiss="modal">Save</button>
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>



    <script>
        $(document).ready(function () {
            $('.apiNumber').click(function () {
                $('#approved-pi-modal-body').html(null);
                let apiNumber = $(this).text();
                $('#api-number-heading').text(apiNumber);
                $.post("@Url.Action("GetPamModalBondPartial", "Sales")", { apiNumber }, function (result) {
                    $('#approved-pi-modal-body').html(result);
                });
                $('#approved-pi').modal({
                    show: true,
                    backdrop: false
                });
            });
            var apiDataList = [];
            function updateTotalValue() {
                var totalValue = 0.00;
                $(apiDataList).each(function () {
                    totalValue += Number(this.DelValue);
                });
                $('#total-value').html(totalValue.toFixed(2));
                console.log('totalValue', totalValue);
            }
            $('#datatable').DataTable();

            $("#rep-filter").change(function () {
                var repName = $(this).val().toLowerCase();
                $("#added-table tbody tr").hide();
                if (repName === "") {
                    $("#added-table tbody tr").show();
                } else {
                    $("#added-table tbody tr").each(function () {
                        var currentRow = $(this);
                        var currentRepName = currentRow.find("td:eq(4)").text().toLowerCase();
                        if (currentRepName === repName) {
                            currentRow.show();
                        }
                    });
                }
            });

            $("#customer-filter").change(function () {
                var customerName = $(this).val().toLowerCase();
                $("#added-table tbody tr").hide();
                if (customerName === "") {
                    $("#added-table tbody tr").show();
                } else {
                    $("#added-table tbody tr").each(function () {
                        var currentRow = $(this);
                        var currentCustomerName = currentRow.find("td:eq(3)").text().toLowerCase();
                        if (currentCustomerName === customerName) {
                            currentRow.show();
                        }
                    });
                }
            });

        });</script>


}