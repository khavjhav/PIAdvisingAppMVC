@model List<PIAdvisingApp.ViewModels.BondApprovedList>

@{
    ViewBag.Title = "Approved List";
}

@section Css {
    <!-- Add your CSS links here -->
}

<h2 class="table-heading">Pending API For CM Approval</h2>

<table id="pi-advising-bond-table" class="mb-0 table table-bordered table-hover custom-table">
    <thead>
        <tr>
            <th class="text-center">Advise Date</th>
            <th class="text-center">Commercial Submission Date</th>
            <th class="text-center">ApiNumber</th>
            <th class="text-center">Original Value</th>
            <th class="text-center">Total Value</th>
            <th class="text-center">Original Quantity</th>
            <th class="text-center">Total Quantity</th>
            <th class="text-center">Company Name</th>
            <th class="text-center">Address</th>
            <th class="text-center">Remarks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.AdviseDate.ToString("dd-MMM-yy")</td>
                <td class="text-center">@item.BondDate.ToString("dd-MMM-yy")</td>
                <td class="text-center api-number">@item.ApiNumber</td>
                <td class="text-center">@item.OriginalValue</td>
                <td class="text-center">@item.TotalValue</td>
                <td class="text-center">@item.OriginalQuantity</td>
                <td class="text-center">@item.TotalQuantity</td>
                <td class="text-center">@item.CompanyName</td>
                <td class="text-center">@item.Address</td>
                <td class="text-center">
                    <!-- Add a button with a unique identifier (e.g., API number) -->
                    <button class="btn btn-primary view-button" data-api-number="@item.ApiNumber">View</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Include the modal directly here -->
<div class="modal fade" id="bond-modal" tabindex="-1" role="dialog" aria-labelledby="bond-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <!-- Add the modal content directly here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#pi-advising-bond-table').DataTable();

            // Add a click event for the "View" button
            $('.view-button').click(function () {
                var apiNumber = $(this).data('api-number'); // Use data attribute to get the API number
                var url = '@Url.Action("GetBondModal", "Bonds")';

                // Use jQuery AJAX to get the modal content and show the modal
                $.get(url, { apiNumber: apiNumber }, function (data) {
                    // Set the modal content and show the modal
                    $('#bond-modal .modal-content').html(data);
                    $('#bond-modal').modal('show');
                });
            });

            // Get the current date and time
            let currentDate = new Date();

            // Format the date to the desired format (e.g., "dd-MMM-yy")
            let formattedDate = currentDate.toLocaleDateString("en-US", {
                day: "2-digit",
                month: "short",
                year: "2-digit",
            });

            // Set the formatted date to the <td> element
            $(".current-date-time").text(formattedDate);
        });
    </script>
}
